@model GastroApp.Models.Samochody.ViewModel.TankowanieZRodzajemPaliwa
@{
    ViewData["Title"] = "Dodawanie dziennego tankowania";
}

<br />
<br />

<h2>Dodawanie dziennego tankowania nr. @ViewBag.count</h2>

<form asp-action="CreateTankowanie" method="post">
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <h5 class="text-danger">@ViewBag.mgs</h5>
        <input type="hidden" asp-for="IdSamochodu" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IdRodzajuPaliwa"></label>
            </div>
            <div class="col-5">
                <select asp-for="IdRodzajuPaliwa" asp-items="@Model.RodzajPaliwaSelect" class="form-control"></select>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Cena"></label>
            </div>
            <div class="col-5">
                <input asp-for="Cena" class="form-control" />
                <span asp-validation-for="Cena" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Ilosc"></label>
            </div>
            <div class="col-5">
                <input asp-for="Ilosc" class="form-control" />
                <span asp-validation-for="Ilosc" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br />
    <div>
        
            <input type="submit" class="btn btn-success" value="Zapisz" />
            <a asp-action="Index" asp-controller="Home" asp-area="Identity" class="btn btn-secondary">Pomiń tankowanie nr. @ViewBag.count</a>
        
    </div>
</form>


@section scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="~/lib/jquery-validation/dist/jquery.validate.js"></script>

    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>

    <script type="text/javascript">

        $.validator.methods.number = function(value, element) {

            console.log('validate');

            return this.optional(element) || /^-?(?:\d+|\d{1,3}(?:\.\d{3})+)?(?:,\d+)?$/.test(value);

        }

    </script>
}