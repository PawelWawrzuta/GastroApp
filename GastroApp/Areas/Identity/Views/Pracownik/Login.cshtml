@using  GastroApp.Models.Pracownicy.ViewModel;
@model PracownikLogin
@{
    ViewData["Title"] = "Logowanie";
}

<br />
<br />

<h2>Logowanie</h2>

<form asp-action="Login" method="post">
    
    <div class="p-4 rounded border">

        <h5 class="text-danger">@ViewBag.msg</h5>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="UserName">Nazwa użytkownika</label>
            </div>
            <div class="col-5">
                <input asp-for="UserName" class="form-control" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PasswordHash">Hasło</label>
            </div>
            <div class="col-5">
                <input asp-for="PasswordHash" class="form-control" type="password" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="RememberMe">Pamiętaj mnie</label>
            </div>
            <div class="col-5">
                <input asp-for="RememberMe" class="checkbox"/>
            </div>
        </div>
    </div>
    <br/>
    <div>
        <input type="submit" class="btn btn-success" value="Zaloguj się" />
    </div>
</form>
