@using GastroApp.Models.Pracownicy.ViewModel;
@model PracownikRegister
@{
    ViewData["Title"] = "Zmiana hasła";
}

<br />
<br />

<h2>Zmiana hasła</h2>

<form asp-action="ChangePassword" method="post">
    
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <input type="hidden" asp-for="Id" />
       <div class="form-group row">
            <div class="col-2">
            </div>
            <div class="col-5">
                <p class="text-danger">@ViewBag.mgs</p>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PasswordHash">Stare hasło</label>
            </div>
            <div class="col-5">
                <input asp-for="PasswordHash" class="form-control" type="password" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Haslo">Nowe hasło</label>
            </div>
            <div class="col-5">
                <input asp-for="Haslo" class="form-control" type="password" />
                <span asp-validation-for="Haslo" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PotwierdzHaslo"></label>
            </div>
            <div class="col-5">
                <input asp-for="PotwierdzHaslo" class="form-control" type="password" />
                <span asp-validation-for="PotwierdzHaslo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br/>
    <div>
        <input type="submit" class="btn btn-primary" value="Zmień hasło" />
    </div>
</form>




@section scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }