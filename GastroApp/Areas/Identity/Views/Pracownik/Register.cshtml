@using  GastroApp.Models.Pracownicy.ViewModel;
@model PracownikRegister
@{
    ViewData["Title"] = "Rejestracja";
}

<br />
<br />

<h2>Rejestracja</h2>

<form asp-action="Register" method="post">
    
    <div class="p-4 rounded border">
        <div asp-validation-summary="ModelOnly" class="text-danger">
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Imie"></label>
            </div>
            <div class="col-5">
                <input asp-for="Imie" class="form-control" />
                <span asp-validation-for="Imie" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Nazwisko"></label>
            </div>
            <div class="col-5">
                <input asp-for="Nazwisko" class="form-control" />
                <span asp-validation-for="Nazwisko" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Email"></label>
            </div>
            <div class="col-5">
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Telefon"></label>
            </div>
            <div class="col-5">
                <input asp-for="Telefon" class="form-control" />
                <span asp-validation-for="Telefon" class="text-danger"></span>
            </div>
        </div>
        <br />

       <div class="form-group row">
            <div class="col-2">
            </div>
            <div class="col-5">
                <p class="text-danger">@ViewBag.mgs</p>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Haslo"></label>
            </div>
            <div class="col-5">
                <input asp-for="Haslo" class="form-control" type="password" />
                <span asp-validation-for="Haslo" class="text-danger"></span>
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="PotwierdzHaslo"></label>
            </div>
            <div class="col-5">
                <input asp-for="PotwierdzHaslo" class="form-control" type="password" />
                <span asp-validation-for="PotwierdzHaslo" class="text-danger"></span>
            </div>
        </div>
    </div>
    <br/>
    <div>
        <input type="submit" class="btn btn-success" value="Zarejestruj się" />
    </div>
</form>




@section scripts
    {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }