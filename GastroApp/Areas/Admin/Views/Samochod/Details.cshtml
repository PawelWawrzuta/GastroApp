@using GastroApp.Models.Samochody.ViewModel
@model SamochodZRodzajemPaliwa
@{
    ViewData["Title"] = "Szczegóły samochodu";
}

<br />
<br />

<div class="row">
    <div class="col-6">
        <h2>Szczegóły samochodu</h2>
    </div>
        <a asp-action="IndexZuzycie" class="btn btn-light" asp-route-id="@Model.IdSamochodu" title="Lista raportów zużycia">
            <i class="bi bi-list-columns-reverse"></i>&nbsp; Lista raportów zużycia
        </a>
        <br />
        <a asp-action="IndexTankowanie" class="btn btn-light" asp-route-id="@Model.IdSamochodu" title="Lista raportów tankowania">
            <i class="bi bi-fuel-pump-fill"></i>&nbsp; Lista raportów tankowania
        </a>
    </div>
<br />

<form asp-action="" method="post">
    <div class="p-4 rounded border">

        <input type="hidden" asp-for="IdSamochodu" />

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Model"></label>
            </div>
            <div class="col-5">
                <input asp-for="Model" class="form-control" readonly="readonly" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Marka"></label>
            </div>
            <div class="col-5">
                <input asp-for="Marka" class="form-control" readonly="readonly" />
            </div>
        </div>
         <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="NrRejestracyjny"></label>
            </div>
            <div class="col-5">
                <input asp-for="NrRejestracyjny" class="form-control" readonly="readonly" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Opis"></label>
            </div>
            <div class="col-5">
                <input asp-for="Opis" class="form-control" readonly="readonly" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="IdRodzajuPaliwa"></label>
            </div>
            <div class="col-5">
                <input asp-for="@Model.RodzajPaliwaList.FirstOrDefault(c => c.IdRodzajuPaliwa == Model.IdRodzajuPaliwa).Nazwa" class="form-control" readonly="readonly">
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="OC"></label>
            </div>
            <div class="col-5">
                <input asp-for="OC" class="form-control" readonly="readonly" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="AC"></label>
            </div>
            <div class="col-5">
                <input asp-for="AC" class="form-control" readonly="readonly" />
            </div>
        </div>
        <br />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Przeglad"></label>
            </div>
            <div class="col-5">
                <input asp-for="Przeglad" class="form-control" readonly="readonly" />
            </div>
        </div>

    </div>
    <br/>
    <div>
        <a asp-action="Edit" class="btn btn-info" asp-route-id="@Model.IdSamochodu">Edytuj</a>
        <a asp-action="Index" class="btn btn-secondary">Wróć do listy</a>
    </div>
</form>
