<br />
<br />

<div>
    <h4>Nowi pracownicy</h4>
    <table class="table table-striped border">
        <thead>
            <tr class="table-light">
                <th>
                    Imię
                </th>
                <th>
                    Nazwisko
                </th>
                <th>
                    Telefon
                </th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Pracownicy)
            {
                @if (item.Roles == "Nowy")
                {
                    <tr>
                        <td>@item.Imie</td>
                        <td>@item.Nazwisko</td>
                        <td>@item.PhoneNumber</td>
                        <td>
                            <partial name="_ButtonPartialUserNew" model="@item.Id" />
                        </td>
                    </tr>
                }

            }
        </tbody>
    </table>



