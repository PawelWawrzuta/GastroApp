@using GastroApp.Models.Pracownicy.ViewModel
@model StanowiskaIndex
@{
    ViewData["Title"] = "Index";
}
<partial name="~/Views/Shared/_Notifications.cshtml" />
<br />
<br />
<div class="row">
    <div class="col-6">
        <h2>Lista pracowników</h2>
    </div>
