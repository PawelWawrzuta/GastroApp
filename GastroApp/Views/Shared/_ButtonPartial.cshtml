@model int
<td style="width: 150px">
    <div class="btn-group">
        <a asp-action="Edit" class="btn btn-primary" asp-route-id="@Model" title="Edytuj"> <i class="bi bi-pencil"></i> </a>
        <a asp-action="Details" class="btn btn-warning" asp-route-id="@Model" title="Szczegóły"> <i class="bi bi-list"></i> </a>
        <a asp-action="Delete" class="btn btn-danger" asp-route-id="@Model" title="Usuń"> <i class="bi bi-trash"></i> </a>
    </div>
</td>