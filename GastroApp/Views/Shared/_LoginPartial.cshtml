@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" title="Szczegóły pracownika" asp-area="Identity" asp-controller="Pracownik" asp-action="Details" asp-route-id="@UserManager.GetUserId(User).ToString()">
                Witaj @UserManager.GetUserName(User)!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-controller="Pracownik" asp-action="Logout">
                <button type="submit" class="nav-link btn btn-link">Wylogowanie</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-controller="Pracownik" asp-action="Register">Rejestracja</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-controller="Pracownik" asp-action="Login">Logowanie</a>
        </li>
    }
</ul>
